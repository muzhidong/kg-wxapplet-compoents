.image-swiper-box {
  position: relative;
}

.image-swiper {
  background-color: #f5f5f5;
}

.image-swiper image {
  width: 100%;
  height: 100%;
}


.dot-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 8rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #CCCCCC;
}

.dot:not(:last-child) {
  margin-right: 8rpx;
}

.dot.active {
  background-color: #2eb2f0;
}
