.item {
  padding-bottom: 25rpx;
}

.item:nth-child(2n+1) {
  flex: 0 1 45%;
}

.item:nth-child(2n) {
  flex: 0 1 55%;
  padding-left: 10%;
  box-sizing: border-box;
}

.point {
  display: inline-block;
  flex-grow: 0;
  flex-shrink: 0;
  width: 10rpx;
  height: 10rpx;
  margin-right: 10rpx;
  background-color: #666B80;
  border-radius: 50%;
}

.content {
  display: inline-block;
}
