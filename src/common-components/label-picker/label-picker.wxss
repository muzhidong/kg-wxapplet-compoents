.picker-container {
  height: 90rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
}

/* 左侧 */
.left {
  flex-shrink: 0;

  display: flex;
  flex-flow: row nowrap;
  align-items: center;

  padding-right: 10rpx;

}

.star {
  color: #FF0000;
  padding-right: 10rpx;
}

/* 右侧 */
.right {
  flex-shrink: 1;

  width: 100%;
  padding-right: 32rpx;
  text-align: right;
  /* 覆盖arrow-btn的flex样式 */
  display: block;
}

.fc-f3 {
  color: #FF3333;
}

/* 底线 */
.line {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  padding-left: 16rpx;
  background: #e5e5e5;
  box-sizing: border-box;
}

/* 弹窗 */
.window {
  position: fixed;
  top: 0;
  bottom: 0;
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
  right: 0;
  left: 0;
  z-index: 99;
}

.mask {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  margin-bottom: 368rpx;

  background: rgba(0, 0, 0, 0.3);
}

.pop-up {
  position: absolute;
  bottom: 0;

  width: 100%;
  height: 368rpx;

  background: #fff;
}

.option {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  /* 28+32 */
  padding-left: 60rpx;
}

.option:nth-child(2) {
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
}

.icon28 {
  width: 28rpx;
  min-width: 28rpx;
  height: 28rpx;
  min-height: 28rpx;

  padding-left: 32rpx;
}

.cancel {
  text-align: center;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 16rpx solid #f5f5f5;
}
