.s-box {
  width: 100%;
  padding-top: 24rpx;
}

.top {
  display: flex;

  flex-flow: row nowrap;

  justify-content: space-between;

  padding: 0 32rpx 24rpx 32rpx;
}

.title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 42rpx;
  color: rgba(26, 26, 26, 1);
}

.recommend-title {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 31rpx;
}

.line {
  display: inline-block;
  width: 6rpx;
  height: 32rpx;
  margin-right: 10rpx;
  background-color: #5890F4;
}
