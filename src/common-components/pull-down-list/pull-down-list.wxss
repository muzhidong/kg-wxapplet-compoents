.vertical-align, .list-container .dialog .list .item view image {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.list-container .top {
  padding: 8rpx 32rpx;
  box-sizing: border-box;
}

.list-container .top > view {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  border-radius: 80rpx;
}

.list-container .top > view > image {
  width: 28rpx;
  height: 28rpx;
  max-width: 28rpx;
  max-height: 28rpx;
  padding: 0 6rpx 0 14rpx;
}

.list-container .dialog {
  position: fixed;
  top: 88rpx;
  left: 0;
  width: 100%;
  height: calc(100% - 88rpx);
  z-index: 999;
  overflow-y: hidden;
}

.list-container .dialog .list {
  max-height: calc(100% - 104rpx);
  -webkit-overflow-scrolling: touch;
  overflow-y: scroll;
}

.list-container .dialog .list .item view {
  position: relative;
}

.list-container .dialog .list .item view image {
  width: 26rpx;
  height: 18rpx;
  max-width: 26rpx;
  max-height: 18rpx;
  left: -42rpx;
}

.list-container .dialog .list .item:not(:last-child) {
  border-bottom: 2rpx solid #e5e5e5;
}

.list-container .dialog .bottom {
  border-top: 16rpx solid #f5f5f5;
  text-align: center;
  line-height: 88rpx;
}

.list-container .dialog .wrapper {
  height: 100%;
  background-color: #000000;
  opacity: .3;
}
