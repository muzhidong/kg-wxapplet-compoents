.image-list {
  display: block;
  width: 100%;
  height: auto;
}

.image-list::after {
  content: '';
  display: block;
  height: 0;
  clear: both;
}

.image-list image {
  position: absolute;
  left: 0;
  top: 0;
  display: block;
  overflow: visible;
  width: 100%;
  height: 100%;
}

.four .item {
  width: 50%;
}

.item {
  float: left;
  box-sizing: border-box;
  width: 33.33333%;
  padding: 8rpx;
}

.item .image-box {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 100%;
}

.item .image-box.only-one {
  width: 100%;
  height: auto;
  padding: 0;
}

.item .only-one image {
  position: relative;
}

.img0 {
  width: 100%;
  min-height: 800rpx;
}

.img1 {
  width: 100%;
  max-height: 400rpx;
}

.img2 {
  width: 218rpx;
  height: 218rpx;
}
