.input-container {
  height: 90rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
}

/* 标签 */
.left {
  flex-shrink: 0;

  display: flex;
  flex-flow: row nowrap;
  align-items: center;

  padding-right: 10rpx;

}

.star {
  color: #FF0000;
  padding-right: 10rpx;
}

/* 输入 */
.right {
  flex-shrink: 1;

  width: 100%;
  padding-right: 32rpx;
  text-align: right;
}

.ph1 {
  color: #cccccc;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

.ph2 {
  color: #FF3333;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

/* 底线 */
.line {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  padding-left: 16rpx;
  background: #e5e5e5;
  box-sizing: border-box;
}
