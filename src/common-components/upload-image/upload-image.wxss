.upload-image-box {
  flex-wrap: wrap;
}

.item-box {
  flex-shrink: 1;
  box-sizing: border-box;
  padding: 8rpx;
  position: relative;
}

.item {
  display: block;
  width: 100% !important;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  overflow: hidden;
  position: relative;
}

.item::before {
  content: '';
  display: block;
  width: 100%;
  padding-bottom: 100%;
  /* border-radius: 8rpx; */
}

.item image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.item .fail-image {
  border-radius: 0;
}

.item .add-btn {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.add-btn::before,
.add-btn::after {
  content: '';
  display: block;
  width: 40%;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #cccccc;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.add-btn::after {
  width: 8rpx;
  height: 40%;
  border: none;
}

.progress-bar {
  flex: none;
  box-sizing: border-box;
  width: 60%;
  height: 24rpx;
  padding: 4rpx;
  border-radius: 12rpx;
  border: 2rpx solid #000000;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.progress {
  width: 0;
  height: 100%;
  border-radius: 8rpx;
  background-color: #000000;
}

.del-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, .6);
  position: absolute;
  right: 8rpx;
  top: 8rpx;
}

.del-btn::before,
.del-btn::after {
  content: '';
  display: block;
  width: 45%;
  height: 4rpx;
  border-radius: 2rpx;
  background-color: #ffffff;
  position: absolute;
  left: 50%;
  top: 50%;
}

.del-btn::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.del-btn::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}
