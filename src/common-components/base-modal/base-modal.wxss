.f-xc-yc {
  display: flex;
  justify-content: center;
  align-items: center;
}

.base-modal-box {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 999999;
  background-color: rgba(0, 0, 0, .3);
}

.content-box {
  box-sizing: border-box;
  width: 622rpx;
  border-radius: 32rpx;
  background-color: #ffffff;
  position: relative;
}

.title {
  padding: 52rpx 0 20rpx;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  padding: 24rpx;
  position: absolute;
  right: 12rpx;
  top: 12rpx;
}

.body {
  padding: 0 32rpx 32rpx;
}
