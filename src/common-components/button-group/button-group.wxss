.btn-group-container {
  display: flex;
  flex-flow: row nowrap;
}

.three {
  justify-content: space-between;
}

.two {
  justify-content: space-around;
}

.btn-group-item {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}

.btn-group-item button {

  width: auto;
  padding: 0;
  border: 0 none;
  margin-left: 0;
  margin-right: 0;
  margin-top: 0;
  margin-bottom: 0;

  font-size: inherit;
  font-weight: normal;

  line-height: inherit;
  color: inherit;

  outline: none;
  border-radius: 0;
  background-color: transparent;
}

.btn-group-item button::after {
  display: none;
}

.pl16 {
  padding-left: 16rpx;
}

.icon40 {
  width: 40rpx;
  min-width: 40rpx;
  height: 40rpx;
  min-height: 40rpx;
}

.none {
  display: none;
}

.bottom-line {
  display: block;
  width: 100%;
  height: 2rpx;
  margin-top: 32rpx;
  background: #E5E5E5;
}
